<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auth"
    tools:context=".UpdateStationUI">

    <ImageView
        android:id="@+id/update_imageView3"
        android:layout_width="258dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/update_station_header" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_cream"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_imageView3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:id="@+id/update_station_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Station Name"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="15dp"
                android:fontFamily="@font/raleway_regular"
                android:textColor="@color/purple"
                android:textColorHint="@color/cream"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="402dp" />

            <EditText
                android:id="@+id/update_station_tel"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Station Tel No"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="15dp"
                android:fontFamily="@font/raleway_regular"
                android:textColor="@color/purple"
                android:textColorHint="@color/cream"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="402dp" />

            <EditText
                android:id="@+id/update_station_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="15dp"
                android:fontFamily="@font/raleway_regular"
                android:textColor="@color/purple"
                android:textColorHint="@color/cream"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="402dp" />

<!--            <EditText-->
<!--                android:id="@+id/update_station_address2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:ems="10"-->
<!--                android:hint="Address Line 2"-->
<!--                android:inputType="textPersonName"-->
<!--                android:text=""-->
<!--                android:textSize="15dp"-->
<!--                android:fontFamily="@font/raleway_regular"-->
<!--                android:textColor="@color/purple"-->
<!--                android:textColorHint="@color/cream"-->
<!--                tools:layout_editor_absoluteX="83dp"-->
<!--                tools:layout_editor_absoluteY="402dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_open_time"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_closing_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_openTime"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Opening Time" />

                <Button
                    android:id="@+id/btn_closeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Closing Time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_Staff_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <Button
                    android:id="@+id/update_station_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@color/cream"
                    android:text="Update Station"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_regular"
        android:text="EAD Group Project"
        android:textColor="@color/purple"
        android:textFontWeight="900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.868" />

</androidx.constraintlayout.widget.ConstraintLayout>