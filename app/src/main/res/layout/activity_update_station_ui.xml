<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auth"
    tools:context=".AddStationUI">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            tools:ignore="RtlCompat"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="258dp"
                android:layout_height="160dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/update_station" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_cream"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/stationName"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Station Name"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <EditText
                        android:id="@+id/stationTelNo"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Station Tel No"
                        android:inputType="number"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <EditText
                        android:id="@+id/addressLine1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Address Line 1"
                        android:inputType="number"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <EditText
                        android:id="@+id/addressLine2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Address Line 2"
                        android:inputType="number"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <EditText
                        android:id="@+id/openingTime"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Opening Time"
                        android:inputType="number"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <EditText
                        android:id="@+id/closingTime"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Closing Time"
                        android:inputType="number"
                        android:text=""
                        android:textSize="15dp"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/purple"
                        android:textColorHint="@color/cream"
                        tools:layout_editor_absoluteX="83dp"
                        tools:layout_editor_absoluteY="402dp" />

                    <LinearLayout
                        android:id="@+id/update_Staff_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <Button
                            android:id="@+id/update_station_btn"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@color/cream"
                            android:text="Update Station"
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>