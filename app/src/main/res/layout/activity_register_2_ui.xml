<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auth"
    tools:context=".Register2UI">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="258dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_logo_white" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_cream"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/login_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_cream"
            android:fontFamily="@font/raleway_regular"
            android:text="Welcome to Fuel Queue"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/purple"
            android:textFontWeight="600"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="279dp" />

        <TextView
            android:id="@+id/login_welcome_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_cream"
            android:fontFamily="@font/raleway_regular"
            android:text="Makes your waiting time worth it"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/purple"
            android:textFontWeight="600"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="279dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectFuelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_cream"
                android:fontFamily="@font/raleway_regular"
                android:textSize="10dp"
                android:gravity="left"
                android:text="Select Fuel Type:"
                android:textColor="@color/purple"
                android:textFontWeight="600"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="279dp"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/gradient_spinner"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:id="@+id/selectVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_cream"
                android:fontFamily="@font/raleway_regular"
                android:textSize="10dp"
                android:gravity="left"
                android:text="Select Vehicle Type:"
                android:textColor="@color/purple"
                android:textFontWeight="600"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="279dp"
                android:layout_marginBottom="5dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/gradient_spinner"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:id="@+id/selectLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_cream"
                android:fontFamily="@font/raleway_regular"
                android:textSize="10dp"
                android:gravity="left"
                android:text="Select Language:"
                android:textColor="@color/purple"
                android:textFontWeight="600"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="279dp"
                android:layout_marginBottom="5dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/gradient_spinner"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginBottom="15dp"
                />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/purple"
                android:text="Register"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/login_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/light_cream"
            android:fontFamily="@font/raleway_regular"
            android:text="Have an account? Log in"
            android:onClick="onClick"
            android:clickable="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/purple"
            android:textFontWeight="700"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="279dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_regular"
        android:text="EAD Group Project"
        android:textColor="@color/purple"
        android:textFontWeight="900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.868" />

</androidx.constraintlayout.widget.ConstraintLayout>