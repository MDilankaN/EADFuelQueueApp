<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <LinearLayout
        android:id="@+id/linearLayoutContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints,RtlCompat">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:text="Contact Us"
            android:textColor="@color/purple"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textFontWeight="900" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_regular"
            android:text="We Love to here from our Users. Feel free to share your experience or ask any question you may have"
            android:textColor="@color/purple"
            android:textFontWeight="800"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:background="@color/light_cream"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/contactus_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/purple"
                    android:textColorHint="@color/cream"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="402dp" />

                <EditText
                    android:id="@+id/contactus_mail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Email Address"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/purple"
                    android:textColorHint="@color/cream"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="402dp" />

                <EditText
                    android:id="@+id/contactus_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Subject"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/purple"
                    android:textColorHint="@color/cream"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="402dp" />


                <EditText
                    android:id="@+id/contactus_msg"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:ems="10"
                    android:fontFamily="@font/raleway_regular"
                    android:gravity="start|top"
                    android:hint="Message"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:textColor="@color/purple"
                    android:textColorHint="@color/cream"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/contactus_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/purple"
                    android:text="Send"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>